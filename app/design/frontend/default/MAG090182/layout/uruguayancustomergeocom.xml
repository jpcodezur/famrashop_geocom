<?xml version="1.0"?>
<layout version="0.1.0">
    <catalog_product_compare_list>
        <reference name="catalog_product_compare_list">
            <action method="setTemplate">
                <template>uruguayancustomer/catalog/product/compare/list.phtml</template>
            </action>
        </reference>
    </catalog_product_compare_list>
    <customer_account_login>
        <reference name="customer_form_login">
            <action method="setTemplate">
                <template>uruguayancustomer/customer/form/login.phtml</template>
            </action>
        </reference>
    </customer_account_login>
    <checkout_onepage_index> <!-- Adding our new step to onepage block  -->
        <reference name='checkout.onepage'>
            <action method='setTemplate'>
                <template>uruguayancustomer/checkout/onepage.phtml</template>
            </action>
            <block type="checkout/onepage_login" name="checkout.onepage.login" as="login"
                   template="uruguayancustomer/checkout/onepage/login.phtml">
                <block type="page/html_wrapper" name="checkout.onepage.login.before" as="login_before"
                       translate="label">
                    <label>Login/Registration Before</label>
                    <action method="setMayBeInvisible">
                        <value>1</value>
                    </action>
                </block>
            </block>
            <block type="uruguayancustomer/onepage_farmalocal" name="checkout.onepage.farmalocal" as="farmalocal"
                   template="uruguayancustomer/checkout/onepage/farmalocal.phtml"/>
        </reference>
        <reference name="right">
            <action method="unsetChildren"></action>
            <block type="page/html_wrapper" name="checkout.progress.wrapper" translate="label">
                <label>Checkout Progress Wrapper</label>
                <action method="setElementId">
                    <value>checkout-progress-wrapper</value>
                </action>
                <block type="checkout/onepage_progress" name="checkout.progress" before="-"
                       template="uruguayancustomer/checkout/onepage/progress.phtml">
                    <block type="checkout/onepage_progress" name="farmalocal.progress"
                           template="uruguayancustomer/checkout/onepage/progress/farmalocal.phtml"></block>
                    <block type="checkout/onepage_progress" name="billing.progress"
                           template="checkout/onepage/progress/billing.phtml"></block>
                    <block type="checkout/onepage_progress" name="shipping.progress"
                           template="checkout/onepage/progress/shipping.phtml"></block>
                    <block type="checkout/onepage_progress" name="shippingmethod.progress"
                           template="checkout/onepage/progress/shipping_method.phtml"></block>
                    <block type="checkout/onepage_progress" name="payment.progress"
                           template="checkout/onepage/progress/payment.phtml"></block>
                </block>
            </block>
        </reference>
    </checkout_onepage_index>
    <checkout_onepage_progress>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>

        <block type="checkout/onepage_progress" name="root" output="toHtml" template="uruguayancustomer/checkout/onepage/progress.phtml">
            <action method="setInfoTemplate"><method></method><template></template></action>
            <block type="checkout/onepage_progress" name="farmalocal.progress" template="uruguayancustomer/checkout/onepage/progress/farmalocal.phtml"></block>
        </block>
    </checkout_onepage_progress>
    <checkout_onepage_progress_farmalocal>
        <remove name="right"/>
        <remove name="left"/>

        <block type="checkout/onepage_progress" name="root" output="toHtml"
               template="uruguayancustomer/checkout/onepage/progress/farmalocal.phtml">
            <action method="setInfoTemplate">
                <method></method>
                <template></template>
            </action>
        </block>
    </checkout_onepage_progress_farmalocal>
</layout>